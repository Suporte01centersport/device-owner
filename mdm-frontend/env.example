# Configurações do Servidor WebSocket MDM

# Nível de Log (error, warn, info, debug)
LOG_LEVEL=info

# Configurações de Throttling
MAX_PINGS_PER_MINUTE=60

# Configurações de Timeout Adaptativo
BASE_INACTIVITY_TIMEOUT=30000
MAX_INACTIVITY_TIMEOUT=120000
MIN_INACTIVITY_TIMEOUT=15000

# Configurações de Monitor de Saúde
HEALTH_SCORE_THRESHOLD=0.5

# Configurações de Performance
HEARTBEAT_INTERVAL=10000
PING_PROBABILITY=0.3

# Configurações de Reconexão
MAX_RECONNECT_ATTEMPTS=20
INITIAL_RECONNECT_DELAY=1000
MAX_RECONNECT_DELAY=30000

# Configurações do PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mdm_owner
DB_USER=postgres
DB_PASSWORD=postgres

# Configurações de SSL (para produção)
NODE_ENV=development