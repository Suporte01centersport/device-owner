{
  "name": "mdm-frontend",
  "version": "1.0.0",
  "description": "Painel web para gerenciamento de dispositivos MDM",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "dev:win": "node -r dotenv/config server/websocket.js dotenv_config_path=.env.development & next dev",
    "dev:websocket": "node -r dotenv/config server/websocket.js dotenv_config_path=.env.development",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:websocket\"",
    "build": "next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production node -r dotenv/config server/websocket.js dotenv_config_path=.env.production & next start",
    "websocket:prod": "NODE_ENV=production node -r dotenv/config server/websocket.js dotenv_config_path=.env.production",
    "lint": "next lint",
    "websocket": "node server/websocket.js",
    "setup-db": "node server/setup-postgresql.js",
    "migrate": "node server/migrate-to-postgresql.js",
    "db:setup": "npm run setup-db && npm run migrate",
    "configure-existing": "node server/configure-existing-db.js",
    "cleanup-devices": "node server/cleanup-orphaned-devices.js",
    "cleanup-devices:confirm": "node server/cleanup-orphaned-devices.js --confirm",
    "remove-duplicates": "node server/remove-duplicate-devices.js",
    "remove-duplicates:confirm": "node server/remove-duplicate-devices.js --confirm",
    "fix-null-device-ids": "node server/fix-null-device-ids.js",
    "fix-null-device-ids:confirm": "node server/fix-null-device-ids.js --confirm",
    "db:migrate:add-new-fields": "node server/database/migrations/run-add-new-fields.js"
  },
  "dependencies": {
    "@coreui/icons-react": "^2.3.0",
    "@react-pdf/renderer": "^4.3.1",
    "appwrite": "^12.0.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.0",
    "pg": "^8.16.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "tailwindcss": "^3.3.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.5.6",
    "typescript": "^5.0.0"
  }
}
