# ==============================================
# CONFIGURAÇÃO DE PRODUÇÃO - SERVIDOR UBUNTU
# ==============================================
# Copie este arquivo para .env no servidor Ubuntu

# Ambiente
NODE_ENV=production

# Configurações do Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mdm_database
DB_USER=mdm_user
DB_PASSWORD=mdm_password_secure_CHANGE_THIS
DB_SSL=false

# Configurações de Autenticação
ADMIN_PASSWORD=Admin@2025!CHANGE_THIS
JWT_SECRET=production-super-secret-jwt-key-CHANGE-THIS-TO-RANDOM-STRING
JWT_EXPIRES_IN=24h

# Configurações do Servidor WebSocket - PRODUÇÃO
WEBSOCKET_PORT=3002
WEBSOCKET_HOST=0.0.0.0
PORT=3002
WS_PORT=3002
DISCOVERY_PORT=3003

# Configurações de Log - PRODUÇÃO (menos verbose)
LOG_LEVEL=warn

# Configurações de Performance - OTIMIZADO PRODUÇÃO
MAX_PINGS_PER_MINUTE=60
HEARTBEAT_INTERVAL=30000
PING_PROBABILITY=0.5

# Configurações de Timeout - ESTÁVEL
BASE_INACTIVITY_TIMEOUT=90000
MAX_INACTIVITY_TIMEOUT=180000
MIN_INACTIVITY_TIMEOUT=60000

# Configurações de Reconexão
MAX_RECONNECT_ATTEMPTS=20
INITIAL_RECONNECT_DELAY=1000
MAX_RECONNECT_DELAY=30000

# Configurações de Saúde da Conexão
HEALTH_SCORE_THRESHOLD=0.5
PONG_TIMEOUT=10000

# Configurações de Backup - PRODUÇÃO
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30

# Next.js - PRODUÇÃO
NEXT_TELEMETRY_DISABLED=1

