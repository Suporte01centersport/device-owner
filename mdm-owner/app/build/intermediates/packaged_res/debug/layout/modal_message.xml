<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/modal_background">

    <!-- Overlay escuro -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/modal_overlay"
        android:clickable="true"
        android:focusable="true" />

    <!-- Modal container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/modal_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Ícone de mensagem" />

                <TextView
                    android:id="@+id/modal_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nova Mensagem"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <ImageButton
                    android:id="@+id/btn_close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Fechar" />

            </LinearLayout>

            <!-- Mensagem -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/message_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mensagem recebida do painel web"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:background="@color/message_background"
                    android:minHeight="120dp" />

            </ScrollView>

            <!-- Timestamp -->
            <TextView
                android:id="@+id/message_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agora"
                android:textSize="12sp"
                android:textColor="@color/muted_text"
                android:gravity="end"
                android:layout_marginBottom="20dp" />

            <!-- Botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_primary"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:minWidth="80dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
