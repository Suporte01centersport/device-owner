<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 
        Políticas válidas para Device Admin / Device Owner
        Referência: https://developer.android.com/guide/topics/admin/device-admin
    -->
    <uses-policies>
        <!-- Políticas de senha -->
        <limit-password />
        <watch-login />
        <reset-password />
        <expire-password />
        
        <!-- Políticas de segurança -->
        <force-lock />
        <wipe-data />
        <encrypted-storage />
        
        <!-- Políticas de restrição de hardware -->
        <disable-camera />
        <!-- REMOVIDO: disable-keyguard-features - causava problemas com navegação e botão recentes -->
    </uses-policies>
</device-admin>
